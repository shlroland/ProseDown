{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noDefaultExport": "error",
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    },
    "ignore": ["**/*/type.ts", "./*.config.ts"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": { "semicolons": "asNeeded", "quoteStyle": "single" }
  },
  "files": {
    "ignore": ["tsconfig.*.json"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
